general {
    interval = 5
    colors = true
    color_good = '#a3be8c'
    color_degraded = '#ebcb8b'
    color_bad = '#bf616a'
    separator = "|"
}

order += "disk /"
order += "wireless wlp4s0"
order += "ethernet enp0s25"
order += "battery 0"
order += "cpu_usage 0"
order += "memory"
order += "volume master"
order += "tztime local"

disk "/" {
    format = "/ %avail"
    prefix_type = custom
    low_threshold = 20
    threshold_type = percentage_avail
}

wireless wlp4s0 {
    format_up = "wlan %quality %ip"
    format_down = ""
}

ethernet enp0s25 {
    format_up = "eth %ip"
    format_down = ""
}

battery 0 {
    format = "bat %percentage %remaining"
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 15
    threshold_type = percentage
    hide_seconds = true
    status_chr = "+"
    status_bat = ""
    status_unk = "?"
    status_full = "="
}

cpu_usage {
    format = "cpu %usage"
}

memory {
    format = "mem %percentage_used"
    threshold_degraded = "20%"
    threshold_critical = "10%"
}

volume master {
    format = "vol %volume"
    format_muted = "vol mute"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%a %d %b %H:%M"
}

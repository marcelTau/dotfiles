# order += "wireless wlan0"
# order += "ethernet eth0"
order += "battery all"
order += "memory"
order += "tztime local"
order += "tztime berlin"

battery all {
    format = "%status %remaining "
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "ðŸ”‹ 1337%"
        status_full = "ðŸ”‹ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

tztime berlin {
    format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

load {
    format = "%5min"
}

memory {
    format = "    %used    "
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
    format = "%free"
}

read_file uptime {
    path = "/proc/uptime"
}

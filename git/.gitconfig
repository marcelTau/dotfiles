[user]
	name = marcel
	email = marcel.taubert@epitech.eu

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	co = checkout
    me = mergetool
    rc = rebase --continue
    amend = commit --amend --no-edit
    recent = "!f() { \
              for b in $(git for-each-ref --format='%(refname:short)' refs/heads); do \
              if git log \"$b\" --since='24 hours ago' --oneline | grep -q .; then \
              echo \"$b\"; \
              fi; \
              done; \
              }; f"

[core]
	whitespace = tabwidth=4
    pager = delta
    editor = nvim
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true

[grep]
	lineNumber = true

[diff]
    colorMoved = default
    tool = nvimdiff
    guitool = nvimdiff

[merge]
    tool = nvimdiff
    conflictstyle = diff3

[mergetool "nvimdiff"]
    layout = LOCAL,MERGED,REMOTE

[color]
	ui = auto

[color "decorate"]
	branch = bold green
	remoteBranch = bold yellow
	tag = bold blue
	stash = bold yellow
	HEAD = bold cyan

[color "branch"]
  remote = bold cyan
  local = white

[color "diff"]
	meta = bold white
	old = bold red
	new = bold green

[color "status"]
	added = bold white
	updated = bold yellow
	changed = bold red
	untracked = bold blue
	branch = green
	nobranch = bold red
